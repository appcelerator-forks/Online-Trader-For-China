<Alloy>
	<Window class="container" id="orderdetail_win" fullscreen="false">
		<Require src="_orderdetailheader"></Require>
		<View class="content_post" id="content">
			<Label class="h2">訂單详情</Label>
			<ImageView class="separator" ></ImageView>
		</View>
		<View class="details_form" id="details_formView" height="78%" >
			<WebView id="orderdetailview" disableBounce="true" url="/html/dealer_orderdetail.html" />
		</View>
		<View id="footer" opacity="0" height="62">
			<Label id="btncancel" onTouchend="orderCancel">取消訂單</Label>
			<View class="border-line" left="33%" top="0%"></View>
		</View>
	</Window>
</Alloy>